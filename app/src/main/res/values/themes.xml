<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wedding" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brandColor</item>
        <item name="colorPrimaryVariant">@color/brandColorDark</item>
        <item name="colorOnPrimary">@color/text_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:statusBarColor" >@color/gallery_background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.ButtonWithoutInset" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="ButtonAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>

    <style name="AppTheme.ActiveButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">64dp</item>
        <item name="shapeAppearanceOverlay">@style/ButtonAppearance</item>
        <item name="colorPrimary">@color/brandColor</item>
        <item name="colorOnPrimary">@color/text_white</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
<!--        <item name="android:fontFamily">@font/san_francisco_semibold</item>-->
        <item name="android:textSize">14sp</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="AppTheme.SecondaryButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">64dp</item>
        <item name="shapeAppearanceOverlay">@style/ButtonAppearance</item>
        <item name="colorPrimary">@color/cell_color</item>
        <item name="colorOnPrimary">@color/brandColor</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <!--        <item name="android:fontFamily">@font/san_francisco_semibold</item>-->
        <item name="android:textSize">14sp</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="ChipCustomStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/brandColorLight</item>
        <item name="android:textColor">@color/brandColor</item>
        <item name="chipCornerRadius">8dp</item>
    </style>

    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="roundedCornersGalleryImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textCursorDrawable">@color/text_white</item>
        <item name="android:fontFamily">@font/sf_pro_rounded_regular</item>
